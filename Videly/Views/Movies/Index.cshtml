@model List<Videly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.Count == 0)
{
    <text>No Movies on the database</text>
}
else
{
<table class="table table-responsive table-bordered">
    <thead>
    <th>Movie</th>
    <th>Genre</th>
    </thead>
    @foreach (var movie in Model)
    {
        <tbody>
        <td>
            @Html.ActionLink(movie.Name,"Details","Movies",routeValues:new { Id=movie.Id },
htmlAttributes: null)
        </td>
        <td>
            @movie.Genre.Name
        </td>
        </tbody>
    }

</table>
}


